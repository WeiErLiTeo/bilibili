{
  "name": "Flutter Custom Build Environment",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "git config --global --add safe.directory /usr/local/flutter && flutter doctor -v",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter"
      ]
    }
  }
}